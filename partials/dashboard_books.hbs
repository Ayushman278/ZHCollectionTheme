{{! BOOKS BLOG}}
<div class="card Medium hoverable">
    <ul class="collection">
        <li>
        <div class="card-image">
              <img src={{asset "img/SM_Light.jpg"}}>
              <span class="card-title grey-text text-darken-1">Books I'm reading</span>
        </div>
        </li>
        
        <div class="divider"></div>
   
        {{! book }}
        {{#get "posts" limit="all" filter="tag:booklist" include="tags"}}
            {{#foreach posts limit="3"}}
                <li class="collection-item">
                    
                    <!-- show tags -->
                    {{#has tag="reading"}}
                        <span class="new badge green right" data-badge-caption="">Reading</span>
                    {{/has}}
                    {{#has tag="done"}}
                        <span class="new badge light-blue darken-3 right" data-badge-caption="">Done</span>
                    {{/has}}
                    
                    <a href="{{url}}" class="grey-text text-darken-1">{{title}}</a>
                </li>
           {{/foreach}}
        {{/get}}
        
        {{! book list}}
        <li>
            <a href="tag/booklist" class="collection-item light-blue-text text-darken-3 center-align hvr-icon-wobble-horizontal hvr-shutter-in-horizon"><i class="fa fa-book" aria-hidden="true"></i> Book List</a>
        </li>

    </ul>
</div>

            

